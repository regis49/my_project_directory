{% extends 'base.html.twig' %}

{% block title %}Symcope - Mes Agents
{% endblock %}


{% block body %}
	<div class="container mt-4">
		<h1>Nos Agents</h1>

		<a href="{{ path('agent.new') }}" class="btn btn-primary">
			Ajouter un agent
		</a>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<table class="table table-hover mt-4">

			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Nom Agent</th>
					<th scope="col">Prénom Agent</th>
					<th scope="col">Date de naissance</th>
					<th scope="col">Date de paye salaire</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>


				</tr>
			</thead>
			<tbody>
				{% for agent in agents %}

					<tr class="table-primary">
						<th scope="row">{{ agent.id }}</th>
						<td>{{ agent.nomagent }}</td>
						<td>{{ agent.prenomagent }}</td>
						<td>{{ agent.datenais|date("d/m/Y") }}</td>
						<td>{{ agent.datepaysalary|date("d/m/Y") }}</td>
						<td>
							<a href="{{ path('agent.edit', { id: agent.id }) }}" class="btn btn-info">
								Modifier
							</a>
						</td>
						<td>
							<a href="{{ path('agent.delete', { id: agent.id }) }}" class="btn btn-warning">
								Supprimer
							</a>

						</td>

					</tr>
				{% endfor %}

			</tbody>
		</tbody>
	</table>
	<div class="navigation d-flex justify-content-center mt-4">
		{{ knp_pagination_render(agents) }}
	</div>


</div>{% endblock %}
