{% extends 'base.html.twig' %}

{% block title %}Symcope - Localité
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Nos Localités</h1>

		<a href="{{ path('localite.new') }}" class="btn btn-primary">
			Ajouter une localité
		</a>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<table class="table table-hover mt-4">

			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Libellé Localité</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>


				</tr>
			</thead>
			<tbody>
				{% for localite in localites %}

					<tr class="table-primary">
						<th scope="row">{{ localite.id }}</th>
						<td>{{ localite.libloca }}</td>
						<td>
							<a href="{{ path('localite.edit', { id: localite.id }) }}" class="btn btn-info">
								Modifier
							</a>
						</td>
						<td>
							<a href="{{ path('localite.delete', { id: localite.id }) }}" class="btn btn-warning">
								Supprimer
							</a>

						</td>

					</tr>
				{% endfor %}

			</tbody>
		</tbody>
	</table>
	<div class="navigation d-flex justify-content-center mt-4">
		{{ knp_pagination_render(localites) }}
	</div>

{% endblock %}
